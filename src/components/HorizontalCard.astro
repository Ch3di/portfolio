---
const {
  title,
  img,
  desc,
  url,
  badge,
  tags,
  date,
  target = "_blank"
} = Astro.props;
import { Image } from "@astrojs/image/components";
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            aspectRatio="16:9"
            width={750}
            alt={title}
            class="max-w-full max-h-fit bg-cover md:max-w-[13rem] rounded-lg"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold flex-1">
          {title}
          {badge && <div class="badge badge-secondary mx-2 mb-3">{badge}</div>}
          <span class="text-sm mx-1 mt-1 italic float-right block">{date}</span>
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => <div class="badge badge-outline">{tag}</div>)
          }
        </div>
      </div>
    </div>
  </a>
</div>
