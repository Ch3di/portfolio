---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
const certificates = [
  {
    title: "Kubernetes and Cloud Native Essentials (LFS250)",
    organization: "Linux Foundation",
    description:
      "Developed practical skills in deploying, managing, and securing containerized applications using Kubernetes and core cloud-native technologies.",
    image: "/linux-foundation-k8s-essentials.jpg",
    date: "19/05/2025",
    url: "https://drive.google.com/file/d/1GiB9Y_FWoqNrbUb9zNUf3rObVcS_clhv/view"
  },
  {
    title: "DevSecOps - Kubernetes DevOps & Security",
    organization: "KodeKloud",
    description:
      "Gained hands-on expertise in implementing DevSecOps practices, securing Kubernetes environments, managing secrets with HashiCorp Vault, detecting and fixing vulnerabilities, integrating security into CI/CD pipelines, and continuously monitoring and protecting cloud-native applications.",
    image: "/kodekloud-devsecops.jpg",
    date: "03/03/2025",
    url: "https://drive.google.com/file/d/1VOwdYCUrMhtF1ZkaLIGBUvu3M0LYJVEv/view"
  },
  {
    title: "AWS Certified Cloud Practitioner",
    organization: "AWS",
    description:
      "Validates the foundational, high-level understanding of AWS Cloud, services, and terminology",
    image: "/aws-certified-cloud-practitioner.jpg",
    date: "25/03/2023",
    url: "https://drive.google.com/file/d/1k8YFstXnE1W_8a7j7iAvgpMkUko7uNS_/view"
  },
  {
    title: "Cloud DevOps Engineer Nanodegree",
    organization: "Udacity",
    description:
      "Acquired skills in cloud computing, infrastructure automation, CI/CD pipelines, containerization, monitoring, security, scripting, version control, and collaboration tools",
    image: "/udacity-nanodegree-cloud-devops-engineer.jpg",
    date: "08/03/2023",
    url: "https://drive.google.com/file/d/166QFllgWW9jvH9anmNyk0Q0dMscKIIyC/view"
  },
  {
    title: "Cyber Security Analyst+ (CySA+)",
    organization: "CompTIA",
    description:
      "Leverage intelligence and threat detection techniques, Analyze and interpret data, Identify and address vulnerabilities, Suggest preventative measures, Effectively respond to and recover from incidents",
    image: "/cysa-plus-certificate.jpg",
    date: "21/05/2020",
    url: "https://drive.google.com/file/d/1TdCwFD8zYLqz57RAhCTqXphwvYICxAvb/view"
  },
  {
    title: "Pentest+",
    organization: "CompTIA",
    description:
      "Planning and Scoping, Information Gathering and Vulnerability Identification, Attacks and Exploits, Penetration Testing Tools, Reporting and Communication",
    image: "/pentest-plus-crtificate.jpg",
    date: "14/02/2020",
    url: "https://drive.google.com/file/d/1J3btMyp1bwM_R0yy5niE5bN7nfUST-8V/view"
  }
];
---

<BaseLayout title="Certifications" sideBarActiveItemID="certifications">
  <div>
    <div class="text-3xl w-full font-bold mb-5">
      Professional Certifications
    </div>
  </div>
  {
    certificates.map((certificate) => (
      <HorizontalCard
        title={certificate.title}
        img={certificate.image}
        desc={certificate.description}
        url={certificate.url}
        badge={certificate.organization}
        date={certificate.date}
      />
    ))
  }
</BaseLayout>
